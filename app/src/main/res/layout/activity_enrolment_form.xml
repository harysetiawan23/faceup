<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".PresentMe">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/footer_pattern"
        android:tint="@color/colorPrimaryLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_back">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sfcompactdisplay_bold"
                android:gravity="center"
                android:text="Enrolment Form"
                android:textColor="#FFF" />
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="22dp"
                android:paddingTop="22dp"
                android:paddingRight="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_outline"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="16dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfcompactdisplay_bold"
                        android:paddingLeft="22dp"
                        android:paddingBottom="12dp"
                        android:text="Employee ID"
                        android:textColor="#FFF" />

                    <EditText
                        android:id="@+id/et_employee_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/ic_editext_round"
                        android:fontFamily="@font/sfcompactdisplay_bold"
                        android:paddingLeft="22dp"
                        android:paddingTop="12dp"
                        android:paddingRight="22dp"
                        android:paddingBottom="12dp"
                        android:text="XXXXXXXX"
                        android:textColor="#FFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfcompactdisplay_bold"
                        android:paddingLeft="22dp"
                        android:paddingBottom="12dp"
                        android:text="Employee Name"
                        android:textColor="#FFF" />

                    <EditText
                        android:id="@+id/et_employe_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/ic_editext_round"
                        android:fontFamily="@font/sfcompactdisplay_bold"
                        android:paddingLeft="22dp"
                        android:paddingTop="12dp"
                        android:paddingRight="22dp"
                        android:paddingBottom="12dp"
                        android:text="XXXXXXXX"
                        android:textColor="#FFF" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_outline"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="16dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="226dp"
                        android:layout_marginBottom="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test" />

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/button_shape_false"
                        android:text="Repeat" />


                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_shape_true"
                    android:text="Submit"
                    android:textColor="#FFF" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>