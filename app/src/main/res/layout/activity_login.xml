<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/footer_pattern"
        android:tint="@color/colorPrimaryLight" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/sfcompactdisplay_regular"
            android:gravity="center"
            android:text="an App for attendance system"
            android:textColor="#FFF"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfcompactdisplay_bold"
                android:paddingLeft="22dp"
                android:paddingBottom="12dp"
                android:text="License Number"
                android:textColor="#FFF" />

            <EditText
                android:id="@+id/et_employee_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ic_editext_round"
                android:fontFamily="@font/sfcompactdisplay_bold"
                android:paddingLeft="22dp"
                android:paddingTop="12dp"
                android:paddingRight="22dp"
                android:paddingBottom="12dp"
                android:text="XXXXXXXX"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_shape_true"
                android:text="Verify"
                android:textColor="#FFF" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/button_shape_false"
        android:padding="6dp"
        android:src="@drawable/ic_info" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="22dp"
        android:text="Copyright Santabodhi Innovation"
        android:textColor="#FFF" />


</FrameLayout>